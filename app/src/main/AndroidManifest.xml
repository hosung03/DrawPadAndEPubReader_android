<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hosung.drawpadandepubreader">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".DrawPadAndEPubApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".SignupActivity"
            android:label="@string/title_activity_signup"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".ObjSvrSettingActivity"
            android:label="@string/title_activity_objsetting"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".DrawPadActivity"
            android:label="@string/title_activity_draw_pad"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".MyEPubReaderActivity"
            android:label="@string/title_activity_epubreader"
            android:configChanges="orientation|screenSize" />
        <activity android:name=".HighlightActivity"
            android:label="@string/title_activity_highlight"/>
    </application>

</manifest>